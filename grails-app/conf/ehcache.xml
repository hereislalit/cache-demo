<ehcache>
    <diskStore path="/var/www/cache-demo/cache"/>
    <defaultCache
            maxElementsInMemory='100000'
            eternal='false'
            timeToIdleSeconds='120'
            timeToLiveSeconds='120'
            overflowToDisk='true'
            maxElementsOnDisk='10000000'
            diskPersistent='true'
            diskExpiryThreadIntervalSeconds='120'
            memoryStoreEvictionPolicy='LRU'/>
</ehcache>